            android:id="@+id/EditText4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="成绩"
            android:singleLine="true"
            android:digits="1234567890"
            android:maxLines="3"
            android:inputType="number"
            android:layout_weight="1"/>
